<%= form_for ([@article, @keyword]), :html => { :class => 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
 

  <div class="row">
      <div class="col-md-6"> 
        <%= f.text_field :kw_name, :class => 'form-control input', :placeholder=>"Palavra_chave" %>
      </div>
  </div>

  <div class="row">
      <div class="col-md-3"> 
        <%= f.submit "Criar Palavra-chave", :class => 'btn btn-primary btn btn-block'  %>
      </div>
  
<% end %>