<% provide(:title, 'Artigos') %>

<h1>Edição</h1>

<p>
  <strong>Nome:</strong>
  <%= @edition.e_name %>
</p>

<div class="row">
  <div class="col-md-3">
<%= link_to 'Editar esta edição', edit_journal_edition_path(@edition.journal_id, @edition), :class => 'btn btn-primary btn-sm btn-block'%>
  </div>
  <div class="col-md-3">
<%= link_to 'Remover', '#', :class => 'btn btn-primary btn-sm btn-block disabled', method: :delete, data: { confirm: 'Você tem certeza que deseja remover esta edição?' } %>
  </div>
  <div class="col-md-3">
<%= link_to 'Voltar', journal_editions_path(@edition.journal_id), :class => 'btn btn-default btn-sm' %>  </div>
</div>

<br><br>

<h1>Artigos desta edição</h1>

<table class="table table-striped table-bordered table-condensed" style="width: 100%">
  <thead>
    <tr>
      <th class="text-center">Título</th>
      <th class="text-center">Resumo</th>
      <th class="text-center">Url</th>
      <th class="text-center">Páginas</th>      
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td class="text-center"><%= link_to article.title, article_keywords_path(article.id, article.edition_id)%></td>
        <td><%= article.abstract%></td>
        <td class="text-center"><%= article.url%></td>
        <td class="text-center"><%= article.num_pages%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
  <div class="col-md-3">
    <%= link_to 'Criar um novo Artigo', new_edition_article_path(@edition), :class => 'btn btn-primary btn btn-block'  %>
  </div>
</div>