<% provide(:title, 'Edição') %>

<h1>Periódico</h1>
<p>
  <strong>Periódico:</strong>
  <%= @journal.j_name %>
</p>
 
<div class="row">
  <div class="col-md-3">
<%= link_to 'Editar este periódico', edit_journal_path(@journal), :class => 'btn btn-primary btn-sm btn-block'%>
  </div>
  <div class="col-md-3">
<%= link_to 'Remover', @journal, :class => 'btn btn-primary btn-sm btn-block disabled',  method: :delete, data: { confirm: 'Você tem certeza que deseja remover este periódico?'} %>
  </div>
  <div class="col-md-3">
<%= link_to 'Voltar', journals_path, :class => 'btn btn-default btn-sm'%>
  </div>
</div>

<br><br>

<h1>Edições deste periódico</h1>

<table class="table table-striped table-bordered table-condensed" style="width: 100%">
  <thead>
    <tr>
      <th class="text-center">Edição</th>
      <th class="text-center">Data da edição</th>
    </tr>
  </thead>

  <tbody>
    <% @editions.each do |edition| %>
      <tr>        
        <td><%= link_to edition.e_name, edition_articles_path(edition.id) %></td>
        <td><%= edition.e_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
  <div class="col-md-3">
    <%= link_to 'Criar uma nova Edição', new_journal_edition_path(@journal), :class => 'btn btn-primary btn btn-block'  %>
  </div>
</div>